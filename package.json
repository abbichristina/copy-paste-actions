{
  "name": "copy-paste-actions",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build && vue-cli-service build --mode targz --no-clean && node scripts/postbuild.js && npm run generateLanguageFile",
    "build:main": "vue-cli-service build && node scripts/postbuild.js",
    "build:targz": "vue-cli-service build --mode targz && node scripts/postbuild.js",
    "test": "node test/test-starter.js",
    "coverage": "nyc npm test",
    "remoteConsoleServer": "node scripts/remoteConsoleServer.js",
    "format": "prettier-eslint --write \"%INIT_CWD%/@(src|scripts|public|test)/**/*.@(js|ts|json|vue)\"",
    "generateLanguageFile": "node scripts/generateLanguageFile.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.31",
    "@fortawesome/free-regular-svg-icons": "^5.15.0",
    "@fortawesome/free-solid-svg-icons": "^5.15.0",
    "@fortawesome/vue-fontawesome": "^2.0.0",
    "bootstrap": "^4.5.2",
    "bootstrap-vue": "^2.17.3",
    "bplist-creator": "0.0.8",
    "bplist-parser": "^0.2.0",
    "core-js": "^3.6.5",
    "deep-eql": "^4.0.0",
    "flexsearch": "^0.6.32",
    "gzip-js": "^0.3.2",
    "highlight.js": "^10.2.0",
    "jquery": "^3.5.1",
    "jszip": "^3.5.0",
    "lodash": "^4.17.20",
    "smoothscroll-polyfill": "^0.4.4",
    "tarballjs": "git+https://github.com/schl3ck/tarballjs.git#v0.2.1",
    "uuid": "^8.3.0",
    "vue": "^2.6.12",
    "vuex": "^3.5.1"
  },
  "devDependencies": {
    "@vue/babel-helper-vue-jsx-merge-props": "^1.0.0",
    "@vue/babel-preset-jsx": "^1.1.2",
    "@vue/cli-plugin-babel": "^4.5.6",
    "@vue/cli-plugin-eslint": "^4.5.6",
    "@vue/cli-service": "^4.5.6",
    "@vue/eslint-config-standard": "^5.1.0",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "eslint": "^7.10.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^6.1.2",
    "express": "^4.17.1",
    "extra-watch-webpack-plugin": "^1.0.3",
    "glob": "^7.1.6",
    "lint-staged": "^10.5.1",
    "markdown-it": "^12.0.2",
    "markdown-it-anchor": "^6.0.0",
    "markdown-it-attrs": "^3.0.3",
    "markdown-it-container": "^3.0.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "prettier-eslint-cli": "^5.0.0",
    "raw-loader": "^4.0.1",
    "sass": "^1.26.11",
    "sass-loader": "^10.0.2",
    "url-loader": "^4.1.0",
    "vue-template-compiler": "^2.6.12",
    "worker-loader": "^3.0.3"
  },
  "nyc": {
    "include": [
      "src/utils/**"
    ],
    "reporter": [
      "text-summary",
      "html"
    ]
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue,json,ts}": [
      "prettier-eslint --write"
    ]
  }
}
